# Production Environment Configuration for app.hyperlinklaw.com
# Copy this file to .env for local testing or set these as Replit Secrets

# Environment
NODE_ENV=production

# App URLs
APP_BASE_URL=https://app.hyperlinklaw.com
MARKETING_BASE_URL=https://hyperlinklaw.com

# Security Configuration
SESSION_SECRET=your_64_character_random_string_here_replace_this_value
CSP_ORIGIN=https://app.hyperlinklaw.com
ALLOWED_ORIGINS=https://app.hyperlinklaw.com,https://hyperlinklaw.com

# Rate Limiting
MAX_UPLOAD_MB=50
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=50

# Authentication (Replit Auth / OIDC)
OAUTH_REDIRECT_URL=https://app.hyperlinklaw.com/auth/callback
REPLIT_DOMAINS=app.hyperlinklaw.com
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id_here

# OAuth Callback Routes
# Ensure these are set in your OAuth provider:
# - Callback URL: https://app.hyperlinklaw.com/api/callback
# - Logout redirect: https://hyperlinklaw.com

# Database
DATABASE_URL=your_postgresql_connection_string_here

# Billing (Stripe - if using)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here
STRIPE_SUCCESS_URL=https://app.hyperlinklaw.com/billing/success
STRIPE_CANCEL_URL=https://app.hyperlinklaw.com/billing/cancel

# External Services (Optional)
REDIS_URL=your_redis_url_if_needed
STORAGE_BUCKET=your_storage_bucket_if_needed

# AI/OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# App Metadata
APP_VERSION=1.0.0
BUILD_DATE=2025-01-02T00:00:00Z
GIT_COMMIT=production